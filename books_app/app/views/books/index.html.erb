<h1><%= I18n.t :Books %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t :Title %></th>
      <th><%= I18n.t :Memo %></th>
      <th><%= I18n.t :Author %></th>
      <th><%= I18n.t :Picture %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "#{I18n.t :Show}", book %></td>
        <td><%= link_to "#{I18n.t :Edit}", edit_book_path(book) %></td>
        <td><%= link_to "#{I18n.t :Destroy}", book, method: :delete, data: { confirm: "#{I18n.t :Are_you_sure?}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>
<br>
<%= link_to "#{I18n.t :New_Book}", new_book_path %>
